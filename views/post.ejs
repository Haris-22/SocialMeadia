    <title>New Post</title>
</head>
<body>
    <div class="bg-black min-h-screen">
        <div class="h-1/5"><%- include('./partials/header')%></div>
        <div class="min-h-4/5 rounded-t-lg bg-zinc-900 mx-1 text-white p-10">
            <form action="/posts/post" method="post" enctype="multipart/form-data">
                
                <textarea placeholder="What are you thinking ?" class="px-3 py-2 w-96 h-28 outline-none rounded-md resize-none bg-zinc-700 block mb-3" name="content"></textarea>
                
                <lab?el class="text-zinc-400">Wanna post image</label><br>

                <input type="file" name="image" 
                class="mb-5 px-2 py-2 w-72 file:h-8 file:bg-zinc-800 file:border-none file:text-white file:rounded-md rounded-lg bg-zinc-700">
                
                <input class="px-3 py-1 bg-blue-500 rounded-md block mb-10 outline-none text-white font-semibold tracking-tight" value="Wanna Share ?" type="submit">
            </form>
        </div>
    </div>
